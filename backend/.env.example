# Spotify API Credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:5001/auth/callback

# Setlist.fm API
SETLIST_API_KEY=your_setlist_api_key

# Redis Configuration
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379

# Session Configuration
SESSION_SECRET=your_session_secret_here

# External Scraper Service
# Deploy the scraper-service separately and add its URL here
SCRAPER_SERVICE_URL=https://your-scraper-service.vercel.app

# Scraper API Key (generate with: openssl rand -hex 32)
# Must match the key set in your Vercel scraper environment
SCRAPER_API_KEY=your_scraper_api_key_here

# Server Configuration
PORT=5001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173